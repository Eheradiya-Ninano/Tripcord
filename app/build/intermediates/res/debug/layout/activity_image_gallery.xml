<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeremy.tripcord.record.gallery.ImageGalleryActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_image_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textView_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.8"
        android:background="#111111"
        android:gravity="center"
        android:text="@string/Gallery"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_gallery_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_gallery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

    </LinearLayout>

</RelativeLayout>
